{
  "manifest_version": 3,
  "name": "Stoflow - Multi-Marketplace Manager",
  "version": "2.0.0",
  "description": "Import, publish and sync your products across Vinted, eBay and Etsy",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "externally_connectable": {
    "matches": [
      "https://stoflow.io/*",
      "https://www.stoflow.io/*",
      "https://app.stoflow.io/*",
      "http://localhost:3000/*",
      "http://localhost:5173/*"
    ]
  },

  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "https://www.vinted.fr/*",
    "https://www.vinted.com/*",
    "https://www.ebay.fr/*",
    "https://www.etsy.com/*",
    "https://api.stoflow.com/*",
    "https://api.stoflow.io/*",
    "https://stoflow.io/*",
    "https://www.stoflow.io/*",
    "http://localhost:3000/*",
    "http://localhost:5173/*"
  ],

  "background": {
    "scripts": ["src/background/index.ts"],
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["https://www.vinted.fr/*"],
      "js": ["src/content/vinted.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://stoflow.io/*",
        "https://www.stoflow.io/*",
        "http://localhost:3000/*",
        "http://localhost:5173/*"
      ],
      "js": ["src/content/stoflow-web.ts"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": [
        "src/content/stoflow-vinted-logger.js",
        "src/content/stoflow-vinted-datadome.js",
        "src/content/stoflow-vinted-api-core.js",
        "src/content/stoflow-vinted-bootstrap.js"
      ],
      "matches": ["https://www.vinted.fr/*", "https://www.vinted.com/*"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "stoflow@stoflow.com",
      "strict_min_version": "109.0"
    }
  }
}
