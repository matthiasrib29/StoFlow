# =============================================================================
# STOFLOW BACKEND - DOCKER DEVELOPMENT CONFIGURATION
# =============================================================================
# Ce fichier est utilisé par docker-compose.dev.yml
# Les variables ici sont des valeurs par défaut, peuvent être surchargées
# dans le docker-compose.dev.yml via la section 'environment'

# Application
APP_NAME=Stoflow
APP_ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database - Use Docker service name
DATABASE_URL=postgresql://stoflow_user:stoflow_dev_password_2024@postgres:5432/stoflow_db

# Redis & Celery - Use Docker service name
REDIS_URL=redis://:stoflow_redis_dev_pass@redis:6379/0
CELERY_BROKER_URL=redis://:stoflow_redis_dev_pass@redis:6379/0
CELERY_RESULT_BACKEND=redis://:stoflow_redis_dev_pass@redis:6379/0
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_SOFT_TIME_LIMIT=540
CELERY_WORKER_CONCURRENCY=4

# JWT (development keys)
JWT_SECRET_KEY=docker-dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/stoflow.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
