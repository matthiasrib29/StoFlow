# Frontend Environment Variables
# Copy this file to .env and configure for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (without /api)
NUXT_PUBLIC_API_URL=http://localhost:8000

# Backend API URL (with /api)
NUXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Dev environment number (1, 2, 3, or 4) - Used for favicon differentiation
NUXT_PUBLIC_DEV_ENV=

# =============================================================================
# Beta Mode (Production)
# =============================================================================

# When enabled, only /beta, /merci, and /legal/* are publicly accessible.
# All other routes require admin authentication.
# Set to 'true' for production beta launch.
NUXT_PUBLIC_BETA_MODE=false
